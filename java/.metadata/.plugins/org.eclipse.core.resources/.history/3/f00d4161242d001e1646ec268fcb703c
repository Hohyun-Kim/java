public class FestivalDaoImpl implements FestivalDao {

  private List<FestivalDto> festivalInfo;

  private int RegionNumber;

  // 서울 : 0
  // 인천 : 1
  // 대전 : 2
  // 광주 : 3
  // 울산 : 4
  // 대구 : 5
  // 부산 : 6
  // 경기 : 7
  // 강원 : 8
  // 충북 : 9
  // 충남 : 10
  // 전북 : 11
  // 전남 : 12
  // 경북 : 13
  // 경남 : 14
  // 제주 : 15
  // 세종 : 16

  private String[] Region = {"서울", "인천", "대전", "광주", "울산", "대구", "부산", "경기", "강원", "충북", "충남", "전북",
      "전남", "경북", "경남", "제주", "세종"};

  @Override
  public void loadData() {
    FestivalSAXParser parser = new FestivalSAXParser();
    festivalInfo = parser.getFestivalInfo();
  }

  @Override
  public List<FestivalDto> search(TripDto tripDto) {
    List<TripDto> finds = new LinkedList<TripDto>();

    return null;
  }

  public int getRegionNumber(String region) {
     if (region.equals("서울특별시")) {
       return 0;
     } else if (region.equals("인천광역시")) {
       return 1;
     } else if (region.equals("대전광역시")) {
       return 2;
     } else if (region.equals("광주광역시")) {
       return 3;
     } else if (region.equals("울산광역시")) {
       return 4;
     } else if (region.equals("대구광역시")) {
       return 5;
     } else if (region.equals("부산광역시")) {
       return 6;
     } else if (region.equals("경기도")) {
       return 7;
     } else if (region.equals("강원특별자치도")) {
       return 8;
     } else if (region.equals("충청북도")) {
       return 9;
     } else if (region.equals("충청남도")) {
       return 10;
     } else if (region.equals("전라북도")) {
       return 11;
     } else if (region.equals("전라남도")) {
       return 12;
     } else if (region.equals("경상북도")) {
       return 13;
     } else if (region.equals("경상남도")) {
       return 14;
     } else if (region.equals("제주특별자치도")) {
       return 15;
     } else if (region.equals("세종특별자치시")) {
       return 16;
     }
  }

