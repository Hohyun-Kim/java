package com.ssafy.trip.util;

import java.util.List;
import javax.xml.parsers.SAXParser;
import javax.xml.parsers.SAXParserFactory;
import com.ssafy.trip.model.dto.FestivalDto;

public class FestivalSAXParser {

  private List<FestivalDto> festivalInfo;
  private int size;

  public FestivalSAXParser() {
    this.loadData();
  }

  private void loadData() {

    SAXParserFactory factory = SAXParserFactory.newInstance();

    String tripInfoFilePath = "res/2023년 지역축제 개최 계획.xml";

    try {
      SAXParser parser = factory.newSAXParser();
      TouristDestinationSAXHandler handler = new TouristDestinationSAXHandler();
      parser.parse(tripInfoFilePath, handler);
      festivalInfo = handler.getFestivals();

      size = festivalInfo.size();
    } catch (Exception e) {
      e.printStackTrace();
    }
  }

  public List<FestivalDto> getFestivalInfo() {
    return festivalInfo;
  }

  public void setFestivalInfo(List<FestivalDto> festivalInfo) {
    this.festivalInfo = festivalInfo;
  }

  public int getSize() {
    return size;
  }

  public void setSize(int size) {
    this.size = size;
  }

  public static void main(String[] args) {
    new FestivalSAXParser();
  }

}
